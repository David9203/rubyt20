

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>



<div class="text-center" >
  <div class="logo">Sign up</div>
  <!-- Main Form -->
  <div class="login-form-1">
    <form id="login-form" class="text-left">
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <label for="lg_username" class="sr-only"  >Username </label>
            <label for="lg_remember">name</label>
            <%= f.text_field :name, autofocus: false, autocomplete: "email",:class => 'form-control' %>
          </div>

           <div class="form-group">
            <label for="lg_username" class="sr-only"  >Username </label>
            <label for="lg_remember">email</label>
            <%= f.text_field :email, autofocus: false, autocomplete: "email",:class => 'form-control' %>
          </div>
          <div class="form-group">
          <label for="lg_remember">password</label>
            <%= f.password_field :password, autocomplete: "off" ,:class => 'form-control'%>
          </div>
           <div class="form-group">
            <label for="lg_remember">password confirmation</label>
            <%= f.password_field :password_confirmation, autocomplete: "off" ,:class => 'form-control'%>
          </div>
          <div class="form-group login-group-checkbox">
            <input type="checkbox" id="lg_remember" name="lg_remember">
            
          </div>
        </div>
        <button type="submit" class="login-button" <%= f.submit "Log in" %>><i class="fa fa-chevron-right"></i></button>
      </div>
      <div class="field">
            <label for="lg_remember">foto</label>
    <%= f.file_field :avatar %>
  </div>

      <div class="etc-login-form">
        <%= render "devise/shared/links" %>
      </div>
    </form>
  </div>
  <!-- end:Main Form -->
</div>




<% end %>



